<?xml version="1.0" encoding="UTF-8"?>
<project name="datamodel" default="all">
    <property name="workflow" value="src/org/opendavinci/GenerateDataModel.mwe2"/>
    <property name="obj.tests" location="bin/"/>
    <property name="reports.tests" location="."/>

    <path id="classpath">
        <fileset dir="lib" includes="*.jar"/>
        <fileset dir="." includes=".antlr-generator-3.2.0.jar"/>
        <pathelement location="src"/>
    </path>
    
    <target name="clean">
        <delete dir="bin"/>
        <delete dir="obj"/>
        <delete dir="model"/>
        <delete dir="src-gen"/>
        <delete dir="xtend-gen"/>
        <delete dir="include"/>
        <delete dir="libtest2"/>
        <delete dir="libtest3"/>
        <delete dir="libtest4"/>
        <delete dir="libtest5"/>
        <delete dir="libtest6"/>
        <delete dir="libtest7"/>
        <delete dir="libtest8"/>
        <delete dir="libtest9"/>
        <delete dir="libtest10"/>
        <delete dir="libtest11"/>
        <delete dir="libtest12"/>
        <delete dir="libtest13"/>
        <delete dir="libtest14"/>
        <delete dir="libtest15"/>
        <delete dir="libtest16"/>
        <delete dir="libtest17"/>
        <delete dir="libtest18"/>
        <delete dir="libtest19"/>
        <delete dir="libtest20"/>
        <delete dir="src/generated"/>
        <delete dir="testsuites"/>
        <delete file="plugin.xml"/>
        <delete file="odDataStructureGenerator-latest.jar"/>
        <delete>
            <fileset dir=".">
                <include name="TEST-*.txt"/>
                <include name="TEST-*.xml"/>
            </fileset>
        </delete>
    </target>
    
    <target name="generate-xtext-artifacts">
        <java classpathref="classpath" 
              classname="org.eclipse.emf.mwe2.launch.runtime.Mwe2Launcher" 
              fork="true">
            <arg value="${workflow}"/>
        </java>
    </target>
    
    <target name="compile-xtend" depends="generate-xtext-artifacts">
        <pathconvert pathsep="${path.separator}" 
                     property="classpath-string" 
                     refid="classpath">
        </pathconvert>
        <java classpathref="classpath"
              classname="org.eclipse.xtend.core.compiler.batch.Main"
              fork="true"
              failonerror="yes">
            <arg value="-cp" />
            <arg value="${classpath-string}" />
            <arg value="-encoding" />
            <arg value="UTF-8" />
            <arg value="-d" />
            <arg value="${basedir}/bin/xtend-gen" />
            <arg value="${basedir}/src-gen${path.separator}${basedir}/src" />
        </java>
    </target>   

    <target name="compile-java" depends="compile-xtend">
        <mkdir dir="obj/bin"/>
        <javac classpathref="classpath"
               destdir="bin"
               source="1.6"
               target="1.6"
               includeantruntime="true">
            <src path="src" />
            <src path="src-gen" />
            <src path="bin/xtend-gen" />
            <src path="test" />
        </javac>
        <copy todir="bin">
            <fileset dir="src" excludes="**/*.java,**/*.xtend" />
            <fileset dir="src-gen" excludes="**/*.java,**/*.xtend" />
            <fileset dir="bin/xtend-gen" excludes="**/*.java,**/*.xtend" />
        </copy>
    </target>

    <target name="test-java">
        <junit printsummary="on" haltonerror="true" haltonfailure="true">
            <classpath>
                <pathelement path="${classpath}"/>
                <pathelement location="${basedir}/bin" />
                <fileset dir="lib" includes="*.jar"/>
            </classpath>

            <formatter type="plain"/>
            <formatter type="xml"/>

            <batchtest fork="yes" todir="${reports.tests}">
                <fileset dir="${obj.tests}">
                    <include name="**/*Test*.class"/>
                    <exclude name="**/*$*.class"/>
                </fileset>
            </batchtest>
        </junit>
        <delete>
            <fileset dir=".">
                <include name="TEST-*$*.txt"/>
                <include name="TEST-*$*.xml"/>
            </fileset>
        </delete>
    </target>

